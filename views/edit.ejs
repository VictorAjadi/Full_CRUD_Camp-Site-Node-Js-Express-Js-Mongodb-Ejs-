<%- include('partials/header.ejs') %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;"><strong>Edit your <%= camping.name %> Campground</strong></h1>
        <div style="width: 50%; margin: 20px auto;">
            <form action="/camping/<%= camping._id %>?_method=PUT" method="post">

                <div>
                    <div class=" form-group">
                        <input type="text" class="border border-light-50 rounded p-1 m-1 w-100" name="name" placeholder="name" value="<%= camping.name %>">
                     </div>
                     <div class=" form-group">
                        <input type="number" name="price" class="border border-light-50 rounded p-1 m-1 w-100" placeholder="price tag" value="<%= camping.price %>" min="0.01" step="0.01">
                    </div>
                     <div class=" form-group">
                         <input type="text" name="image" class="border border-light-50 rounded p-1 m-1 w-100" placeholder="image url" value="<%= camping.image %>">
                     </div>
                     <div class=" form-group">
                         <input type="text" class="border border-light-50 rounded p-1 m-1 w-100" name="description" placeholder="description" value="<%= camping.description %>">
                      </div>
                     <div class=" form-group">
                         <button type="submit" class="text-center text-light btn-primary rounded w-100 m-1">Submit!</button>
                     </div>
                </div>

          </form> 
        </div>
    </div>
        <a href="/camping" class="text-primary my-0" style="text-decoration: none; margin-left: 27%;"><strong> Go To Camp</strong></a>
</div>



<%- include('partials/footer.ejs') %>