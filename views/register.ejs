<%- include('partials/header.ejs') %>
<div style="margin-top: 15%; margin-bottom: auto; width: 100%;">
    <h1 class="text-center"><strong>SignUp to Camp</strong></h1>
    <div class="container"  style="min-width: 30%;max-width: 40%;">
        <form action="/register" method="post">
            <div>
                <div class="form-group m-3">
                    <input class="border border-light-50 rounded p-1 m-1 w-100" type="text" name="username" placeholder="username">
                </div>
                <div class="form-group m-3">
                    <input class="border border-light-50 rounded p-1 m-1 w-100" type="password" name="password" placeholder="password">
                </div>
                <div class="form-group m-3">
                    <input type="submit" value="SignUp" class="w-100 btn btn-primary">
                </div>
            </div>
        </form>
    </div>
</div>

<%- include('partials/footer.ejs') %>