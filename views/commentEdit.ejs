<%- include('partials/header.ejs') %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;"><strong>Edit A New Comment for <%= comment.author.username %> </strong></h1>
        <div style="width: 50%; margin: 20px auto;">
            <form action="/camping/<%= camping_id %>/comment/<%= comment._id %>/edit?_method=PUT" method="post">
                <div>
                     <div class=" form-group">
                         <input type="text" name="text" class="border border-light-50 rounded p-1 m-1 w-100" placeholder="text" value="<%= comment.text %>">
                     </div>
                     <div class=" form-group">
                         <button type="submit" class="text-center text-light btn-primary rounded w-100 m-1">Submit!</button>
                     </div>
                </div>  

          </form> 
        </div>
    </div>
        <a href="/camping" class="text-primary my-0" style="text-decoration: none; margin-left: 27%;"><strong> Go To Camp</strong></a>
</div>



<%- include('partials/footer.ejs') %>